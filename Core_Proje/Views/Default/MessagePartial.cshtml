<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
        <form action="/Default/MessagePartial" method="POST">
            <div class="form-group my-2">
                <label for="Name" class="form-label fw-bolder">Name</label>
                <input class="form-control" type="text" id="Name" name="Name" required>
            </div>
            <div class="form-group my-2">
                <label for="mail" class="form-label fw-bolder">Email</label>
                <input class="form-control" type="email" id="mail" name="mail" required>
            </div>
            <div class="form-group my-2">
                <label for="content" class="form-label fw-bolder">Message</label>
                <textarea class="form-control" style="resize: none;" id="content" name="content" rows="4" required></textarea>
            </div>
            <button class="btn btn-primary mt-2" type="submit">Send</button>
        </form>
    </div>
</div>