@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<!-- Card header -->
<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="status">Açıklama</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.ExperinceId
                    </th>
                    <td class="budget">
                        @item.Name
                    </td>
                    <td class="budget">
                        @item.Description
                    </td>
                    <td><a class="btn btn-danger" href="/Experience/DeleteExperience/@item.ExperinceId">Sil</a></td>
                    <td><a class="btn btn-info" href="#">Düzenle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" href="/Experience/AddExperience">Yeni Deneyim Ekle</a>
</div>

